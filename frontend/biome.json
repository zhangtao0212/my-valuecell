{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "files": {
    "includes": [
      "src/**/*.{ts,tsx,js,jsx}",
      "!src/components/magicui",
      "!src/components/ui"
    ]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteStyle": "double"
    }
  },
  "linter": {
    "domains": {
      "react": "recommended",
      "tailwind": "recommended"
    },
    "rules": {
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useKeyWithClickEvents": "off",
        "noStaticElementInteractions": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "correctness": {
        "noUnusedImports": {
          "fix": "safe",
          "level": "warn",
          "options": {}
        },
        "useExhaustiveDependencies": "warn"
      },
      "nursery": {
        "noImportCycles": "warn",
        "useSortedClasses": {
          "fix": "safe",
          "level": "error",
          "options": {
            "attributes": [
              "className"
            ],
            "functions": [
              "cn"
            ]
          }
        }
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noUnknownAtRules": {
          "level": "warn",
          "options": {}
        },
        "noVar": "error"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}